# Database Configuration
DATABASE_URL="mongodb://localhost:27017/smart-inventory"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-make-it-long-and-random"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-different-from-jwt-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for password reset and email verification)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-app-password"
SMTP_FROM="noreply@smartinventory.com"

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# TensorFlow Model Configurations
TENSORFLOW_MODEL_PATH="/models/tensorflow"
PROPHET_MODEL_PATH="/models/prophet"

# WebSocket Configuration
WS_PORT=8080

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"

# Logging Configuration
LOG_LEVEL="info"

# Environment
NODE_ENV="development"

# Application Configuration
APP_NAME="Smart Inventory Management System"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Advanced inventory management system for apparel industry"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes

# Database Connection Pool
DATABASE_POOL_SIZE=20

# Forecast Configuration
FORECAST_BATCH_SIZE=100
FORECAST_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_SMS_ENABLED=false
ALERT_WEBHOOK_URL="https://your-webhook-url.com"

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SENTRY_DSN="your-sentry-dsn"

# Analytics
GOOGLE_ANALYTICS_ID="your-google-analytics-id" 